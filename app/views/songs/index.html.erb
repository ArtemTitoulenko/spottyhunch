<div id="songs_app">
	<h1 id="logo">Spotify Playlist Generator</h1>
	<div id="flash_space"></div>
	<ol id="song_list">
	</ol>
  <%= render 'form' %>
</div>

<script type="text/javascript">
  $(document).ready(function(){
  });
</script>

<script id="song_item" type="text/html">
<div id='{{id}}'>
	<div class='listTrackContent'>
		<div class="content">
			<div class="trackInfo clearfix">
        <a class="trackName" href="{{trackUrl}}" target="_blank">{{track}} - {{artist}}</a>
				<div class="icons">
          <span class="delete">
            <img src="images/delete.png"/>
          </span>
          <span class="expand">
            <img src="images/expand.png"/>
          </span>
        </div>
        <span class="genre">{{genre}}</span>
        <div class="dragicon {{id}}">
          <a class="uriTxt"></a>
        </div>
			</div>
		</div>
		<ol class="{{id}}">
    </ol>
    
  </div>
</div>
</script>

<script id="error_item" type="text/html">
  <div class="error">
    <span class="message">{{error}}</span>
    <span class="closeError">
      <img src="images/delete.png"/>
    <span>
  </div>
</script>

<script id="similar_song_item" type="text/html">
<li class="track">
	<div class="trackInfo">
		<div class="track">
			<a href="{{trackUrl}}" target="_blank">{{track}}</a>
		</div>
		<div class="artist">
			<a href="{{artistUrl}}" target="_blank">{{artist}}</a>
		</div>
		<div class="albumReleased">
  	  <a href="{{albumUrl}}" target="_blank">{{track}} ({{released}})</a>
  	</div>
	</div>
</li>
</script>

